<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/item_wisata_list"
        android:visibility="visible"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/icon_ibadah"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"
            android:background="@color/grey"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:gravity="center_vertical">

            <kukila.backindapps.Layout.BackindMontserratBold
                android:id="@+id/country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BANDUNG"
                android:textColor="@color/abuDark"
                android:textSize="20dp"
                android:textStyle="bold"
                />
            <kukila.backindapps.Layout.BackindMontserratBold
                android:id="@+id/start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Starting from"
                android:textColor="@color/abuDark"
                android:textSize="12dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <kukila.backindapps.Layout.BackindMontserratLight
                    android:id="@+id/rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="rating"
                    android:textColor="@color/abuDark"
                    android:textSize="12dp"
                    android:layout_gravity="left"
                    />
                <kukila.backindapps.Layout.BackindMontserratLight
                    android:id="@+id/review"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="23 Review"
                    android:gravity="right"
                    android:textColor="@color/abuDark"
                    android:textSize="12dp"
                    android:layout_gravity="left"
                    android:layout_margin="5dp"
                    />
            </LinearLayout>





        </LinearLayout>


    </LinearLayout>


</RelativeLayout>