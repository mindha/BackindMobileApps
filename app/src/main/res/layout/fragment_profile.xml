<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kukila.backindapps.Profile">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:id="@+id/item_wisata_list"
        android:visibility="visible"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/icon_ibadah"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:gravity="center_vertical">

            <kukila.backindapps.Layout.BackindMontserratBold
                android:id="@+id/nama_wisata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                />
            <kukila.backindapps.Layout.BackindMontserratLight
                android:id="@+id/harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="name@gmail.com"
                android:textSize="12dp"
                android:layout_margin="5dp"
                />
            <kukila.backindapps.Layout.BackindMontserratBold
                android:id="@+id/review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 1.000.000,-"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:layout_gravity="left"
                android:layout_margin="5dp"
                />

        </LinearLayout>


    </LinearLayout>


</FrameLayout>
